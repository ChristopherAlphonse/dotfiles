[diff "astextplain"]
    textconv = astextplain

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[http]
    sslBackend = openssl
	sslverify = true
	sslcainfo = /etc/ssl/cert.pem
# Windows

[core]
    autocrlf = true
    fscache = true
    symlinks = true
    fsmonitor = true
    editor = code -w
    whitespace = trailing-space,cr-at-eol
    excludesfile = ~/.gitignore
    autocrlf = false

[pull]
    rebase = false

[credential]
	helper = cache
	helper = 
	helper = /usr/local/share/gcm-core/git-credential-manager

[credential "https://dev.azure.com"]
    useHttpPath = true

[init]
    defaultBranch = main
# Changed from master to main for consistency

[user]
	name = calphonse
	email = calphonse@cargurus.com

[github]
    user = christopheralphonse

[merge]
    ff = only  # Fast forward only

[diff]
    mnemonicprefix = true
    compactionHeuristic = true

[alias]
    a = add
    ci = commit -v
    d = diff
    dif = diff
    l = log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    lo = log -1 --pretty='%C(red)%H%nAuthor: %C(green)%an%n%C(magenta)%s%n%b'
    ls = branch -a
    circle = !gh pr checks
    open = !gh browse
    pr = !gh pr create --fill
    rebase = rebase  # Fixed misspellings
    s = status --short --branch
    unstage = reset
    wip = !git add . && git commit -m '[ci skip] WIP'

    # Typos
    push = push
    pull = pull
    branch = branch
	tree = ! git ls-tree --full-name --name-only -t -r HEAD | sed -e \"s/[^-][^\\/]*\\//   |/g\" -e \"s/|\\([^ ]\\)/|-- \\1/\"
[push]
    default = simple
    autoSetupRemote = true

[credential "https://code.cargurus.com"]
	provider = github
